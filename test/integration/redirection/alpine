#!/bin/sh

if [ -p /dev/stdin ]; then
  cat - | docker run --interactive --network "host" --rm $(tty >/dev/null && echo "--tty") alpine:${ALPINE_VERSION:-"3.8"} "$@"
  exit $?
else
  echo "" >/dev/null | docker run --interactive --network "host" --rm $(tty >/dev/null && echo "--tty") alpine:${ALPINE_VERSION:-"3.8"} "$@"
  exit $?
fi